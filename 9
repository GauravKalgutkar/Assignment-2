def length_of_longest_substring(s):
    char_indices = {}
    max_length = 0
    start = 0
    for end, char in enumerate(s):
        if char in char_indices and char_indices[char] >= start:
            start = char_indices[char] + 1
        char_indices[char] = end
        max_length = max(max_length, end - start + 1)
    return max_length
